<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical">
        <include layout="@layout/pageheaderwithoutrefresh"/>
        <GridLayout
            android:id="@+id/gridViewmenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:alignmentMode="alignMargins"
            android:columnCount="3"
            android:columnOrderPreserved="false"
            android:background="@color/colorWhite"
            android:padding="10dp"
            android:rowCount="5">
            <!-- ROW 1  -->
            <androidx.cardview.widget.CardView
                android:id="@+id/mdbcurrentadmission"
                style="@style/StyleHomeGridCardView">
                <LinearLayout
                    style="@style/StyleHomeGridLayout">
                    <ImageView
                        style="@style/StyleHomeGridImage"
                        android:src="@drawable/icondb_admissioncurrentyear" />
                    <TextView
                        style="@style/StyleHomeGridText"
                        android:text="Current Admission"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/mdbduelist"
                style="@style/StyleHomeGridCardView">
                <LinearLayout
                    style="@style/StyleHomeGridLayout">
                    <ImageView
                        style="@style/StyleHomeGridImage"
                        android:src="@drawable/icondb_duelist" />
                    <TextView
                        style="@style/StyleHomeGridText"
                        android:text="Due List"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/mdbstaffbirthday"
                style="@style/StyleHomeGridCardView">
                <LinearLayout
                    style="@style/StyleHomeGridLayout">
                    <ImageView
                        style="@style/StyleHomeGridImage"
                        android:src="@drawable/icondb_staffbirthday" />
                    <TextView
                        style="@style/StyleHomeGridText"
                        android:text="Staff Birthday"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/mdbstaffattendance"
                style="@style/StyleHomeGridCardView">
                <LinearLayout
                    style="@style/StyleHomeGridLayout">
                    <ImageView
                        style="@style/StyleHomeGridImage"
                        android:src="@drawable/icondb_staffattendance" />
                    <TextView
                        style="@style/StyleHomeGridText"
                        android:text="Staff Attendance"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/mdblibrarydetails"
                style="@style/StyleHomeGridCardView">
                <LinearLayout
                    style="@style/StyleHomeGridLayout">
                    <ImageView
                        style="@style/StyleHomeGridImage"
                        android:src="@drawable/icondb_projecttracker" />
                    <TextView
                        style="@style/StyleHomeGridText"
                        android:text="Library Details"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/mdbVoucherDetails"
                style="@style/StyleHomeGridCardView">
                <LinearLayout
                    style="@style/StyleHomeGridLayout">
                    <ImageView
                        style="@style/StyleHomeGridImage"
                        android:src="@drawable/icondb_upcomingevents"/>
                    <TextView
                        style="@style/StyleHomeGridText"
                        android:text="Voucher Details"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
