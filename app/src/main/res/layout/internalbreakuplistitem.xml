<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btnselector_revarse"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:orientation="vertical">
        <!--android:layout_height="?android:attr/listPreferredItemHeightLarge"-->

        <TextView
            android:id="@+id/txtSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Break up Desc"
            android:padding="3dp"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/txtProgSection"
            android:padding="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/colorBlack"
            android:text="Program Section"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/txtConductConvertMaxMarks"
            android:padding="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/colorBlack"
            android:text="Conduct / Convert Max Marks"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/txtProgSecId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/txtInternalBreakupId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:visibility="gone"/>
</LinearLayout>
